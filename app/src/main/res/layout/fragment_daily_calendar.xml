<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.calendar.DailyCalendarFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is Daily" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingEnd="20dp"
        android:layout_gravity="end"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabWeekly"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#FFF3F3"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="60dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/weekcalendar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMonthly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#FFF3F3"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/monthcalendar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabHome"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#FFF3F3"
            android:contentDescription="@string/todo"
            android:src="@drawable/home" />


    </LinearLayout>

</LinearLayout>